// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model schedules {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  title     String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      user     @relation(fields: [nameId], references: [id])
  nameId   String  @db.ObjectId
  barber   barber? @relation(fields: [barberId], references: [id])
  barberId String? @db.ObjectId
}

model user {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  name      String
  phone     String?
  nasc      DateTime?
  Passwd    String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  address   Address?
  posts     schedules[]
}

model barber {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  name      String
  phone     String?
  nasc      DateTime?
  Passwd    String
  admin     Boolean
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  address   Address?
  posts     schedules[]
}

// Address is an embedded document
type Address {
  street String
  city   String
  state  String
  zip    String
}
