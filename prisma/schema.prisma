// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Schedules {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  service   String   @unique
  date      DateTime?
  body      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      User     @relation(fields: [nameId], references: [id])
  nameId    String   @db.ObjectId
  barber    Barber  @relation(fields: [barberId], references: [id])
  barberId  String  @db.ObjectId
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  name      String
  phone     String
  birth     DateTime?
  Passwd    String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  posts     Schedules[]

  @@map("client")
}

model Barber {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  name      String
  phone     String?
  nasc      DateTime?
  Passwd    String
  admin     Boolean
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  address   Address?
  posts     Schedules[]
}

// Address is an embedded document
type Address {
  street String
  city   String
  state  String
  zip    String
}
